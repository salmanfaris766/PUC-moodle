1)
#include<stdio.h>

int main() {
    printf("Hello, World!");
    return 0;
}

2)
#include <stdio.h>

int main() {
    char ch;

    scanf("%c", &ch);
    printf("%c", ch);

    return 0;
}
3)
#include <stdio.h>

int main() {
    int a, b;
    float c, d;

    scanf("%d%d", &a, &b);
    scanf("%f%f", &c, &d);

    printf("%d %d\n", a + b, a - b);
    printf("%.1f %.1f", c + d, c - d);

    return 0;
}

