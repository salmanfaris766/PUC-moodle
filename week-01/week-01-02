1)
#include <stdio.h>

int main() {
    char c;
    int m1, m2, m3, avg;

    scanf("%c\n", &c);
    scanf("%d %d %d", &m1, &m2, &m3);

    avg = (m1 + m2 + m3) / 3;
    printf("%c\n%d", c, avg);

    return 0;
}
2)
#include <stdio.h>

int main() {
    int a;
    long int b;
    char c;
    float d;
    double e;

    scanf("%d %ld %c %f %lf", &a, &b, &c, &d, &e);
    printf("%d\n%ld\n%c\n%.3f\n%.9f\n", a, b, c, d, e);

    return 0;
}
3)
#include <stdio.h>

int main() {
    char ch, prev_ch, next_ch;

    scanf("%c", &ch);
    printf("%d\n", ch);

    prev_ch = ch - 1;
    next_ch = ch + 1;

    printf("%c%c", prev_ch, next_ch);

    return 0;
}


